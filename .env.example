# ============================================================
# BACKEND CONFIGURATION
# ============================================================

# Backend AI configuration (Groq)
# Set your Groq API key here or via environment variable
GROQ_API_KEY=your_groq_api_key_here
GROQ_RECS_MODEL=llama-3.1-8b-instant

# Legacy OpenAI settings (no longer used for recommendations)
#OPENAI_API_KEY=
#OPENAI_RECS_MODEL=gpt-4o-mini

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=mindvoice
DB_USER=root
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET_KEY=your_secret_key_here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
PORT=5000

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================================
# EMAIL SERVICE (BREVO)
# ============================================================
# Para obtener tu API key:
# 1. Ve a https://app.brevo.com/
# 2. Inicia sesión o crea una cuenta gratuita
# 3. Ve a Settings > SMTP & API > API Keys
# 4. Crea una nueva API key y pégala aquí
BREVO_API_KEY=your_brevo_api_key_here
SENDER_EMAIL=your_email@example.com
CONTACT_RECEIVER_EMAIL=your_email@example.com

# ============================================================
# FRONTEND CONFIGURATION
# ============================================================

VITE_API_URL=http://localhost:5000
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

